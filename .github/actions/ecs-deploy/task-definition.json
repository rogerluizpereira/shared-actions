{
  "family": "task-family",
  "containerDefinitions": [
      {
          "name": "$container_name",          
          "image": "$image_name",
          "cpu": 128,
          "memory": 128,
          "essential": true,
          "portMappings": [
              {
                  "containerPort": 9097,
                  "hostPort": 0,
                  "protocol": "tcp"
              }
          ],
          "environment": [
              {
                  "name": "ENVIRONMENT",
                  "value": "$environment"
              }
          ],
          "mountPoints": [],
          "volumesFrom": [],
          "logConfiguration": {
              "logDriver": "awslogs",
              "options": {
                  "awslogs-group": "/ecs/$environment/task-family",
                  "mode": "non-blocking",
                  "awslogs-create-group": "true",
                  "max-buffer-size": "25m",
                  "awslogs-region": "$region",
                  "awslogs-stream-prefix": "ecs"
              }
          },
          "systemControls": []
      }
  ],
  "taskRoleArn": "$task_role_arn",
  "executionRoleArn": "$execution_role_arn",
  "volumes": [],
  "placementConstraints": [],
  "requiresCompatibilities": [
      "EC2"
  ],
  "cpu": "128",
  "memory": "128",
  "runtimePlatform": {
      "cpuArchitecture": "X86_64",
      "operatingSystemFamily": "LINUX"
  },
  "tags": [
      {
          "key": "managed-by",
          "value": "github"
      },
      {
          "key": "environment",
          "value": "$environment"
      }
  ]
}